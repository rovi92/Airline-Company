<Window x:Class="compagniaAerea.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:compagniaAerea"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="560">
    <Grid Name="base" Background="#F5F5F5" Visibility="Visible">
        <Grid Name="main" Background="#F5F5F5">
            <Border BorderBrush="#0277BD" BorderThickness="2" HorizontalAlignment="Left" Height="218" Margin="15,95,0,0" VerticalAlignment="Top" Width="215">
                <Grid HorizontalAlignment="Left" Height="214" VerticalAlignment="Top" Width="210" Background="#B3E5FC">
                    <TextBlock x:Name="Login_title" HorizontalAlignment="Left" Margin="24,10,0,0" TextWrapping="Wrap" Text="Login" VerticalAlignment="Top" FontSize="18.667" FontFamily="Arial Black" Opacity="0.6"/>
                    <TextBlock x:Name="login_username" HorizontalAlignment="Left" Margin="24,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Us"/><Run Text="ername:"/></TextBlock>
                    <TextBox x:Name="Login_usernametxt" HorizontalAlignment="Left" Height="20" Margin="23,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="164"/>
                    <TextBlock x:Name="login_password" TextWrapping="Wrap" Margin="24,94,131,104" Text="Password:"/>
                    <PasswordBox x:Name="Login_passwordtxt" HorizontalAlignment="Left" Margin="23,112,0,0" VerticalAlignment="Top" Width="164" Height="20"/>
                    <Button x:Name="Loginbtn" Content="Login" HorizontalAlignment="Left" Margin="24,161,0,0" VerticalAlignment="Top" Width="163" Height="20" Click="click_apriFormCliente"/>
                    <Label Height="25" Margin="19,133,20,56">
                        <Hyperlink Click="click_apriRegistrazione">
                            <TextBlock Text="Non hai un account? Registrati" />
                        </Hyperlink>
                    </Label>
                    <Label Height="25" Margin="15,184,15,5">
                        <Hyperlink Click="click_apriFormCliente">
                            <InlineUIContainer>
                                <TextBlock Height="17" RenderTransformOrigin="0.282,0.533" Width="169" ><Run Text="Oppure prenota "/><Run Text="il"/><Run Text=" tuo"/><Run Text=" biglietto"/></TextBlock>
                            </InlineUIContainer>
                        </Hyperlink>
                    </Label>

                </Grid>
            </Border>
            <Border BorderBrush="#0277BD" BorderThickness="2" HorizontalAlignment="Left" Height="218" Margin="260,95,0,0" VerticalAlignment="Top" Width="275">
                <Grid Height="214" VerticalAlignment="Top" Background="#B3E5FC" HorizontalAlignment="Left" Width="271" >
                    <TextBlock x:Name="biglietto_title" HorizontalAlignment="Left" Margin="15,10,0,0" TextWrapping="Wrap" Text="Ricerca Biglietto" VerticalAlignment="Top" FontSize="18.667" FontFamily="Arial Black" Width="181" Opacity="0.6"/>
                    <TextBlock x:Name="codice_biglietto" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Codice Biglietto:" VerticalAlignment="Top" Margin="15,44,0,0"/>
                    <TextBox x:Name="CodiceBigliettotxt" HorizontalAlignment="Left" Height="20" Margin="15,64,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="237" IsHitTestVisible="True" AllowDrop="True" Tag="" Background="White"/>
                    <TextBlock x:Name="nome_biglietto" HorizontalAlignment="Left" Margin="15,98,0,0" TextWrapping="Wrap" Text="Nome:" VerticalAlignment="Top"/>
                    <TextBox x:Name="NomeBigliettotxt" HorizontalAlignment="Left" Height="20" Margin="15,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="101"/>
                    <TextBlock x:Name="cognome_biglietto" HorizontalAlignment="Left" TextWrapping="Wrap" Text="Cognome:" VerticalAlignment="Top" Margin="118,98,0,0"/>
                    <TextBox x:Name="CognomeBigliettotxt" HorizontalAlignment="Left" Height="20" Margin="118,116,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="131"/>
                    <Button x:Name="button1" Content="Cerca" HorizontalAlignment="Left" Margin="15,147,0,0" VerticalAlignment="Top" Width="232" Height="20"/>
                </Grid>
            </Border>
            <Image x:Name="image" HorizontalAlignment="Left" Height="80" Margin="10,8,0,0" VerticalAlignment="Top" Width="532"/>

        </Grid>
        <Grid Name="gridRegistrazione" Background="#F5F5F5">
            <TextBlock x:Name="nome" HorizontalAlignment="Left" Margin="20,67,0,0" TextWrapping="Wrap" Text="Nome:" VerticalAlignment="Top"/>
            <TextBox x:Name="Nometxt" HorizontalAlignment="Left" Height="20" Margin="134,66,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="cognome" HorizontalAlignment="Left" Margin="20,100,0,0" TextWrapping="Wrap" Text="Cognome:" VerticalAlignment="Top" RenderTransformOrigin="0.486,-0.683"/>
            <TextBox x:Name="Cognometxt" HorizontalAlignment="Left" Height="20" Margin="134,99,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="data_nascita" HorizontalAlignment="Left" Margin="20,132,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Data di nascita"/><Run Text=":"/></TextBlock>
            <DatePicker Name="DataNascitaPicker" HorizontalAlignment="Left" Margin="134,131,0,0" VerticalAlignment="Top" Width="120" />
            <TextBlock x:Name="username" HorizontalAlignment="Left" Margin="20,166,0,0" TextWrapping="Wrap" Text="Username:" VerticalAlignment="Top"/>
            <TextBox x:Name="Usernametxt" HorizontalAlignment="Left" Height="20" Margin="134,165,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="password" HorizontalAlignment="Left" Margin="20,199,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Passw"/><Run Text="o"/><Run Text="rd:"/></TextBlock>
            <PasswordBox x:Name="Passwordtxt" Height="20" HorizontalAlignment="Left" Margin="134,198,0,0" VerticalAlignment="Top" Width="120" Password="Prova"/>
            <TextBlock x:Name="Conf_Passwordtxt" HorizontalAlignment="Left" Margin="20,232,0,0" TextWrapping="Wrap" Text="Conferma Password:" VerticalAlignment="Top"/>
            <PasswordBox x:Name="conferma_password" HorizontalAlignment="Left" Margin="134,231,0,0" VerticalAlignment="Top" Height="20" Width="120" Password="Prova"/>
            <TextBlock x:Name="email" HorizontalAlignment="Left" Margin="20,265,0,0" TextWrapping="Wrap" Text="Email:" VerticalAlignment="Top"/>
            <TextBox x:Name="Emailtxt" HorizontalAlignment="Left" Height="20" Margin="134,264,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="indirizzo" HorizontalAlignment="Left" Margin="274,67,0,0" TextWrapping="Wrap" Text="Indirizzo:" VerticalAlignment="Top"/>
            <TextBox x:Name="Indirizzotxt" HorizontalAlignment="Left" Height="20" Margin="359,66,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBox x:Name="NumeroCivicotxt" HorizontalAlignment="Left" Height="20" Margin="483,66,0,0" TextWrapping="Wrap" Text="N." VerticalAlignment="Top" Width="40"/>
            <TextBlock x:Name="telefono" HorizontalAlignment="Left" Margin="274,100,0,0" TextWrapping="Wrap" Text="Telefono:" VerticalAlignment="Top"/>
            <TextBox x:Name="Telefonotxt" HorizontalAlignment="Left" Height="20" Margin="359,99,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="stato" HorizontalAlignment="Left" Margin="274,133,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Stato"/><Run Text=":"/></TextBlock>
            <ComboBox x:Name="StatoCombobox" HorizontalAlignment="Left" Margin="359,131,0,0" VerticalAlignment="Top" Width="120" />
            <TextBlock x:Name="regione" HorizontalAlignment="Left" Margin="274,166,0,0" TextWrapping="Wrap" Text="Regione:" VerticalAlignment="Top"/>
            <TextBox x:Name="Regionetxt" HorizontalAlignment="Left" Height="20" Margin="359,165,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="città" HorizontalAlignment="Left" Margin="274,199,0,0" TextWrapping="Wrap" Text="Città:" VerticalAlignment="Top"/>
            <TextBox x:Name="Cittàtxt" HorizontalAlignment="Left" Height="20" Margin="359,198,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="cap" HorizontalAlignment="Left" Margin="274,232,0,0" TextWrapping="Wrap" Text="CAP:" VerticalAlignment="Top"/>
            <TextBox x:Name="Captxt" HorizontalAlignment="Left" Height="20" Margin="359,231,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
            <TextBlock x:Name="codice_fiscale" HorizontalAlignment="Left" Margin="274,265,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="20" Width="78"><Run Text="Codice Fiscale:"/><LineBreak/><Run/></TextBlock>
            <TextBox x:Name="CodiceFiscaletxt" HorizontalAlignment="Left" Height="20" Margin="359,264,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        </Grid>
    </Grid>
</Window>