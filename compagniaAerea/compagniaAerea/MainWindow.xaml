<Window x:Class="compagniaAerea.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:compagniaAerea"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="padre">
        <Grid x:Name="sinistra" HorizontalAlignment="Left" Height="299" Margin="10,10,0,0" VerticalAlignment="Top" Width="224">
            <Button x:Name="btnCliente" Content="CLIENTE" HorizontalAlignment="Left" VerticalAlignment="Top" Width="224" RenderTransformOrigin="-9.495,-0.983" Height="299" Click="cliente_click"/>
        </Grid>
        <Grid x:Name="destra" HorizontalAlignment="Left" Height="299" Margin="253,10,0,0" VerticalAlignment="Top" Width="224">
            <Button x:Name="btnDipente" Content="DIPENDENTE" HorizontalAlignment="Left" VerticalAlignment="Top" Width="224" Height="299" Click="dipendente_click"/>
        </Grid>
        <Grid x:Name="gridDipendente" HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="507" Margin="10,-10,0,0" Visibility="Hidden">
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="228,43,0,0" TextWrapping="Wrap" Text="Nome Utente" VerticalAlignment="Top" Width="83"/>
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="228,121,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="83"/>
            <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="197,151,0,0" VerticalAlignment="Top" Width="181"/>
            <TextBox x:Name="txtUtente" HorizontalAlignment="Left" Height="23" Margin="197,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="181"/>
        </Grid>
        <Grid x:Name="cliente" HorizontalAlignment="Left" Height="319" Margin="0,3,0,-3" VerticalAlignment="Top" Width="512" Visibility="Hidden">
            <Button x:Name="btnControlla" Content="Controlla il tuo biglietto" HorizontalAlignment="Left" Height="302" Margin="257,7,0,0" VerticalAlignment="Top" Width="224"/>
            <Button x:Name="btnPrenota" Content="prenota il tuo biglietto" HorizontalAlignment="Left" Height="299" Margin="10,7,0,0" VerticalAlignment="Top" Width="224"/>
        </Grid>



    </Grid>
</Window>
