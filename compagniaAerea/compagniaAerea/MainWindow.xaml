<Window x:Class="compagniaAerea.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:compagniaAerea"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="padre">
        <Grid x:Name="gridDipendente" HorizontalAlignment="Left" Height="319" VerticalAlignment="Top" Width="508" Margin="9,-4,0,0" Visibility="Hidden">
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="228,85,0,0" TextWrapping="Wrap" Text="Nome Utente" VerticalAlignment="Top" Width="83"/>
            <TextBlock x:Name="textBlock1" HorizontalAlignment="Left" Margin="228,168,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="83"/>
            <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="172,208,0,0" VerticalAlignment="Top" Width="180"/>
            <TextBox x:Name="txtUtente" HorizontalAlignment="Left" Height="24" Margin="172,126,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="181"/>
            <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="245" Margin="160,54,0,0" VerticalAlignment="Top" Width="208"/>
            <Button x:Name="btnLogIn" Content="Log In" HorizontalAlignment="Left" Margin="228,250,0,0" VerticalAlignment="Top" Width="75"/>
            <Button x:Name="button" Content="&lt;-" HorizontalAlignment="Left" Height="26" Margin="35,10,0,0" VerticalAlignment="Top" Width="44" Click="clkret"/>
        </Grid>
        <Grid x:Name="cliente" HorizontalAlignment="Left" Height="319" Margin="-5,-5,0,0" VerticalAlignment="Top" Width="512" Visibility="Hidden">
            <Button x:Name="btnControlla" Content="Controlla il tuo biglietto" HorizontalAlignment="Left" Height="252" Margin="257,57,0,0" VerticalAlignment="Top" Width="224"/>
            <Button x:Name="btnPrenota" Content="prenota il tuo biglietto" HorizontalAlignment="Left" Height="249" Margin="10,57,0,0" VerticalAlignment="Top" Width="224"/>
            <Button x:Name="btnback" Content="->" HorizontalAlignment="Left" Height="29" Margin="424,10,0,0" VerticalAlignment="Top" Width="57" Click="clrek"/>
        </Grid>
        <Grid x:Name="main" HorizontalAlignment="Left" Height="319" Margin="0,-13,0,0" VerticalAlignment="Top" Width="507">
            <Button x:Name="btnCliente" Content="CLIENTE" HorizontalAlignment="Left" Height="242" Margin="10,67,0,0" VerticalAlignment="Top" Width="222" Click="clkcliente" Background="White" BorderBrush="#FF0A0A0A"/>
            <Button x:Name="btnDipendente" Content="DIPENDENTE" HorizontalAlignment="Left" Height="242" Margin="254,67,0,0" VerticalAlignment="Top" Width="228" Click="clkDipendente">
                <Button.Background>
                    <ImageBrush/>
                </Button.Background>
            </Button>
        </Grid>


    </Grid>
</Window>
